<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wochanye.demo.mapper.DeptExtMapper">
    <select id="selectCount" resultType="java.lang.Integer">
        select count(*)
        from wocy_dept
        <where>
            <if test="deptName != null">
                dept_name like #{deptName}"%"
            </if>
        </where>
    </select>

    <select id="selectDeptList" resultMap="com.wochanye.demo.mapper.DeptMapper.BaseResultMap">
        select *
        from wocy_dept
        <where>
            <if test="deptName != null">
                dept_name like #{deptName}"%"
            </if>
        </where>
        <if test="limit != null">
            limit ${limit}
        </if>
        <if test="offset != null">
            offset ${offset}
        </if>
    </select>
</mapper>